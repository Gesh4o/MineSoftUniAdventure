
doctype
html
  head
    title Hello!
    link(href="/css/site.css" rel="stylesheet")
  body
    .container
      ul.menu
        li
          a(href="/") Home
        li
          a(href="/about") About
        li.delimiter
        if (currentUser)
          li
            span= currentUser.username
          li
            form#logout-form(method="post" action="/user/logout")
              a(href="javascript:document.getElementById('logout-form').submit()") Logout
        else 
          li
            a(href="/user/register") Register
          li
            a(href="/user/login") Log In
      if (globalError)
        h3= globalError
      block main-content