body
  font-size 100%
  margin 0
  padding 0
  background-color #000
  font-family 'lucida grande', arial, tahoma, sans-serif

#container
  margin 0 auto
  padding-top 20px
  width 683px
  position relative
  background-color #333

#header
  margin 0 auto
  width 640px
  height 250px
  background transparent url('./../../images/header.jpg') top left no-repeat

.headtitle
  position relative
  font-family Times
  font-size 30px
  color #FFF
  top 210px
  left 12px

#menu
  margin 10px
  height 29px
  padding 5px 0
  ul
    margin 0
    padding 7px
    height 29px
    li
      list-style none
      display inline
      a
        &:hover
          background-color #FFF

#menu ul li a:link, #menu ul li a:active, #menu ul li a:visited
  color #767676
  padding 10px 7px 10px 7px
  font-size 1em
  font-family 'lucida grande', arial, sans-serif
  font-weight bold
  text-decoration none

#content
  min-height 390px
  width 640px
  margin 0 auto
  background-color #FDFDFD

#insidecontent
  float left
  padding-left 5%
  padding-right: 5%
  width 90%
  p
    margin 0
    color #767676
    font-family Tahoma
    font-size 1.2em
    line-height 170%

h1
  margin 0
  font-weight normal
  color #6A7919
  font-size 2.5em
  font-family Times

h2
  margin 0
  display inline
  position relative
  top -1.5em
  left 2em
  font-size 1.8em
  font-weight normal
  color #94c258

h3
  margin 0
  font-size 1.5em
  font-weight normal
  color #94C258

#footer
  margin 0 auto
  width 641px
  height 39px
  span
    display block
    position relative
    font-family Tahoma
    font-size 1.2em
    padding 10px
    color #767676

.postcontent 
    font-size 100%
    padding 3%
    border: 2px solid grey
    border-radius: 5px
    margin 5px
    width 94%

img
  width 100%

postcontent a 
  text-decoration none
  float: right;

.createpost 
  margin 5px

.createpost input, .createpost label 
  margin 5px
  font-size 1.2em